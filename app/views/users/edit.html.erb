<% provide(:title, "Edit user") %>
<div class="hero-unit">
<div class="row">
  <div class="span6 offset3">
    <p>修改账户<p>
  <%= form_for(@user) do |f| %>
    <%= f.label :name, "用户名" %>
    <%= f.text_field :name %>
    <%= f.label :email, "邮箱" %>
    <%= f.text_field :email %>
    <%= f.label :password ,"密码" %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, "确认密码" %>
    <%= f.password_field :password_confirmation %>
    <div><%= f.submit "保存", class: "btn btn-large btn-primary" %></div>
  <% end %>
  </div>
  <div class="span6 offset3">
    <p>修改资料<p>
  <%= form_for(@user.profile) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.label :tel ,"电话" %>
    <%= f.text_field :tel %>
    <%= f.label :qq, "QQ" %>
    <%= f.text_field :qq %>
    <%= f.label :school  ,"学校" %>
    <%= f.text_field :school %>
    <%= f.label :sex ,"性别：此处只能填写male和female，否则不能排班" %>
    <%= f.text_field :sex %>
    <div><%= f.submit "保存", class: "btn btn-large btn-primary" %></div>
  <% end %>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">更改头像</a>
  </div>
</div>
</div>