<% provide(:title, "Edit user") %>
<h1>修改资料</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@user.profile) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.label :tel ,"电话" %>
    <%= f.text_field :tel %>
    <%= f.label :qq, "QQ" %>
    <%= f.text_field :qq %>
    <%= f.label :school  ,"学校" %>
    <%= f.text_field :school %>
    <%= f.label :sex ,"性别" %>
    <%= f.text_field :sex %>
    <div><%= f.submit "保存", class: "btn btn-large btn-primary" %></div>
  <% end %>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">更改头像</a>
  </div>
</div>
